<div style="display: flex; justify-content: center; width: 99vw; text-align: center; font-size: x-large;">
  <form action="" enctype="multipart/form-data" method="POST"
    style="margin-top: 2em; width: 300px; border-width: 1px; border-color: black; background: darkgrey;">
    <div class="form-group">
      <input id="img" type="file" class="form-control-file" name="uploaded_file">
      <img id="preview" src="#" alt="preview of loaded image" style="height: 200px;"/>
      <input type="text" class="form-control" placeholder='Team Name' value='{{{team.name}}}' name="name">
      <input type="text" class="form-control" placeholder='AAA' value='{{team.tla}}' name="tla">
      <input type="text" class="form-control" placeholder='England' value='{{team.area.name}}' name="areaName">
      <input type="text" class="form-control" placeholder='www.equipoweb.com' value='{{team.website}}' name="website">
      <input type="text" class="form-control" placeholder='ejemplo@host.com' value='{{team.email}}' name="email">
      <div style="display: flex; justify-content: space-between;">
        <a href="javascript:history.back()">
          <button type="button" style="background-color: blue; color: aliceblue;">Back</button>
        </a>
          <input type="submit" value="Send" class="btn btn-default" style="background-color: green; color: aliceblue;"/>
      </div>
    </div>
  </form>
</div>
  <script>
    document.querySelector('#img').onchange = (event) => {
  const [file] = document.querySelector('#img').files
  if (file) {
    document.querySelector('#preview').src = URL.createObjectURL(file)
  }
}
</script>